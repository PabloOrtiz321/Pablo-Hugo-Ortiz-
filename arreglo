#include <iostream>
#include"conio.h"

using namespace std;



void main()
{
	double arreglo[100];
	int tamanio;
	float mayor = 0;
	do
	{
		cout << "Ingrese el tamaÃ±o: "; 
		cin >> tamanio;
	} while ((tamanio > 100) || (tamanio <= 0));
	{
		for (int i = 0; i < tamanio; i++)
		{
			do
			{
				cout << "Ingrese el valor: ";
				cin >> arreglo[i];
				if ((arreglo[i] > 100) || (arreglo[i] <= 0))
					cout << "error"<<endl;
				if (arreglo[i] > mayor)
					mayor = arreglo[i];
			} while ((arreglo[i] > 100) || (arreglo[i] <= 0));
		}
	}
	cout << "El mayor es: " << mayor;
}
